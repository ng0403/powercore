@CHARSET "UTF-8";

html{
	font-family: 'Nanum Gothic', Dotum, "돋움", Gulim, "굴림", Verdana, Arial, "Trebuchet MS";
	border-collapse: collapse;
    border-spacing: 0;
}

select{
	 font-size:12px;
  	 background-color:#ffffff;
 	 color:#5F5F5F;
 	 border:1px solid #C0C4CB;
 	/*  padding:3px 3px; */
 	 border-radius:5px 5px 5px 5px;
 	 width: 50px;
}

.caption{
	color:#484848;
	font-size: 15px;
	font-weight: bold;
	padding-bottom: 5px;
	border-bottom: 1px solid #dddddd;
}

.bt_position_popup{
	margin-top:10px;
	/* border-bottom: 2px solid #dddddd; */
	font-size: 13px;
    color:#484848;
}

.bs-example2{
	width:100%;
	height:200px;
	overflow-y:scroll;
	border: 1px solid #DDD;
}

.table{
	width:100%;
	font-size: 13px;
	border: 1px solid #DDD;
	background-color: #F2F2F2;
}

.bs-example1 table td{
	
	font-size:13px;
	height:25px;
	text-align: center;
	color: #353535;
	font-weight: bold;
}

.bs-example2 table td{
	
	font-size:12px;
	height:40px;
	text-align: center;
	color: #212121;
	border-top: 1px solid #dddddd;
	
}

.schedule_bt_position{
	float:right;
	margin-top: 10px;
}

.bs-example2 table tr:HOVER {
	background-color: #ebe7e7;
	cursor: pointer;
}

.btn{
 
  padding: 5px 5px;
  font-size: 12px;
  font-weight: normal;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  border: 1px solid #C0C4CB;
  border-radius: 5px 5px 5px 5px;
  width:45px;
  background-color:#eaeaea; 
  color: #353535;
  
}

.btn:HOVER {
	color: #C4AA9E;
	text-decoration: none;
	
}

.btn[disabled]{
	cursor: not-allowed;
	background-color:#ffffff; 
  	color: #C4AA9E;
}

.btn-success {

  color: #353535;
  background-color: #E4F7BA;
  border-color: #BDBDBD;
	
}

.schedule_code_select{
	width:50px;
}

