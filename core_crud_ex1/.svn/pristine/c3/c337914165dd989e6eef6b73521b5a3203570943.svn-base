	// 영업기회 리스트
	@RequestMapping(value = "/oppt")
	ModelAndView list(HttpSession session,
			@RequestParam Map<String, String> map,
			@RequestParam(value = "pageNum", defaultValue = "1") int pageNum
			, String sales_oppt_id) {
		if (session.getAttribute("user") == null) {
			return new ModelAndView("redirect:/");
		}
		ModelAndView mov = new ModelAndView("oppt");
		map.put("pageNum", pageNum + "");
		mov.addObject("homechk", false);
		
		List<OpptVO> list = null;
		PagerVO page = null;
		// 홈화면 처리
		if(sales_oppt_id != null){
			list = service.getFineOpptPageNum();
			
			// 홈화면 페이지번호 알아내기 위한 리스트
			int idxCnt = 0; // contID index 번호 카운트
			int pageCnt = 1; // page 번호 카운트
			// 페이지 번호 알아내기
			for (int i = 0; i < list.size(); i++) {
				if(list.get(i).getSales_oppt_id().equalsIgnoreCase(sales_oppt_id)){
					break;
				}
				idxCnt++;
				if(idxCnt == 5){
					idxCnt = 0;
					pageCnt++;
				}
			} // for()
			map.put("pageNum", String.valueOf(pageCnt));// pageNum에 알아낸 페이지번호 집어넣기
			pageNum = pageCnt;
			
			OpptVO detail = service.opptDetail(sales_oppt_id);
			mov.addObject("detail", detail);
			mov.addObject("homechk", true);
		}
		
		// 영업기회 상태 코드 가져오기
		List<OpptVO> osclist = service.opptOscList();

		// 영업단계 코드 가져오기
		List<OpptVO> otllist = service.opptOtlList();
		List<MenuVO> menuList = menuService.selectAll(session);
		// 한글 검색 인코더 변환
		map.put("ssales_oppt_nm", map.get("ssales_oppt_nm"));
		map.put("scust_nm", map.get("scust_nm"));

		map.put("pageNum", pageNum + "");
		page = service.opptPageCount(map);
		map.put("startRow", page.getStartRow() + "");
		map.put("endRow", page.getEndRow() + "");

		list = service.opptList(map);

		mov.addObject("oplist", list);
		mov.addObject("osclist", osclist);
		mov.addObject("otllist", otllist);
		mov.addObject("page", page);
		mov.addObject("menuList", menuList);
		// 검색어, 페이지번호 전달
		mov.addObject("searchInfo", map);
		sales_oppt_id = null;
		return mov;
	}

